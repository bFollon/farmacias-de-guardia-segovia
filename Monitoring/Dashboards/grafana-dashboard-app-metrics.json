{
  "title": "Farmacias de Guardia - App Metrics",
  "uid": "farmacias-app-metrics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": [
    "app",
    "mobile",
    "metrics"
  ],
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "query",
        "label": "Environment",
        "description": "Filter by environment",
        "query": "label_values(app_launches_total, environment)",
        "current": {
          "selected": true,
          "text": "production",
          "value": "production"
        },
        "options": [],
        "refresh": 1,
        "includeAll": false,
        "multi": false,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "title": "Total Launches",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 8,
        "h": 4
      },
      "id": 1,
      "targets": [
        {
          "expr": "sum(app_launches_total{environment=\"$environment\"})",
          "legendFormat": "Total Launches",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 100,
                "color": "yellow"
              },
              {
                "value": 1000,
                "color": "blue"
              }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "iOS Users",
      "type": "stat",
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 8,
        "h": 4
      },
      "id": 2,
      "targets": [
        {
          "expr": "sum(app_launches_total{platform=\"iOS\", environment=\"$environment\"})",
          "legendFormat": "iOS",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Android Users",
      "type": "stat",
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 8,
        "h": 4
      },
      "id": 3,
      "targets": [
        {
          "expr": "sum(app_launches_total{platform=\"Android\", environment=\"$environment\"})",
          "legendFormat": "Android",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "green"
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Version Distribution",
      "type": "piechart",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "id": 4,
      "targets": [
        {
          "expr": "sum by (app_version, platform) (app_launches_total{environment=\"$environment\"})",
          "legendFormat": "{{app_version}} ({{platform}})",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "displayLabels": [
          "percent"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Active Users Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "id": 5,
      "targets": [
        {
          "expr": "sum by (app_version, platform) (increase(app_launches_total{environment=\"$environment\"}[1h]))",
          "legendFormat": "{{app_version}} ({{platform}})",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": [
            "lastNotNull",
            "max"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": {
              "mode": "none"
            },
            "axisPlacement": "auto"
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Platform Breakdown",
      "type": "piechart",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "id": 6,
      "targets": [
        {
          "expr": "sum by (platform) (app_launches_total{environment=\"$environment\"})",
          "legendFormat": "{{platform}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "single"
        },
        "displayLabels": [
          "percent"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Version Adoption Rate (Last 7 Days)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "id": 7,
      "targets": [
        {
          "expr": "sum by (app_version) (increase(app_launches_total{environment=\"$environment\"}[1h]))",
          "legendFormat": "v{{app_version}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": [
            "lastNotNull",
            "mean",
            "max"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": {
              "mode": "normal"
            },
            "axisPlacement": "auto"
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "OS Version Distribution",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 24,
        "h": 8
      },
      "id": 8,
      "targets": [
        {
          "expr": "sum by (platform, os_version, app_version) (app_launches_total{environment=\"$environment\"})",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Value",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "displayName",
                "value": "Launches"
              },
              {
                "id": "decimals",
                "value": 0
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "platform"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Platform"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "os_version"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "OS Version"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "app_version"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "App Version"
              }
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "environment": true,
              "exported_job": true,
              "instance": true,
              "job": true,
              "otel_scope_name": true,
              "app_build": true
            },
            "indexByName": {
              "platform": 0,
              "app_version": 1,
              "os_version": 2,
              "Value": 3
            }
          }
        }
      ]
    },
    {
      "title": "URL Scraping Success Rate",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 28,
        "w": 12,
        "h": 8
      },
      "id": 9,
      "targets": [
        {
          "expr": "sum by (region, status) (increase(pdf_urls_scraped_total{environment=\"$environment\"}[1h]))",
          "legendFormat": "{{region}} - {{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": [
            "lastNotNull",
            "sum"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": {
              "mode": "none"
            },
            "axisPlacement": "auto"
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "title": "Scraping Status by Region",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 28,
        "w": 12,
        "h": 8
      },
      "id": 10,
      "targets": [
        {
          "expr": "sum by (region) (pdf_urls_scraped_total{status=\"success\", environment=\"$environment\"}) / sum by (region) (pdf_urls_scraped_total{environment=\"$environment\"}) * 100",
          "legendFormat": "{{region}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 80,
                "color": "yellow"
              },
              {
                "value": 95,
                "color": "green"
              }
            ]
          },
          "unit": "percent",
          "decimals": 1,
          "max": 100,
          "min": 0
        }
      }
    }
  ]
}